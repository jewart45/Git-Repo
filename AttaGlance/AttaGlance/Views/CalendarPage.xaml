                <local:EventBlock Height="100" VerticalAlignment="Top" controls:DockPanel.Dock="Top"/>
                <local:EventBlock Height="100" VerticalAlignment="Top" controls:DockPanel.Dock="Top"/>
                <local:EventBlock Height="100" VerticalAlignment="Top" controls:DockPanel.Dock="Top"/>
                <local:EventBlock Height="100" VerticalAlignment="Top" controls:DockPanel.Dock="Top"/>
                <local:EventBlock Height="100" VerticalAlignment="Top" controls:DockPanel.Dock="Top"/>

            </controls:DockPanel>
                <controls:DockPanel  Width="400" controls:DockPanel.Dock="Left" HorizontalAlignment="Left" >
                    <TextBlock HorizontalAlignment="Center" controls:DockPanel.Dock="Top" FontSize="25">User 1</TextBlock>
                    <local:EventBlock  controls:DockPanel.Dock="Top"/>
                    <local:EmptyEventBlock controls:DockPanel.Dock="Top"/>
                    <local:EventBlock VerticalAlignment="Top" controls:DockPanel.Dock="Top"/>

                </controls:DockPanel>
            </controls:DockPanel>

            </ScrollViewer>
    </Grid>
</Page>
