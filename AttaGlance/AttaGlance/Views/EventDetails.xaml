<Page
    x:Class="AttaGlance.Views.EventDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AttaGlance.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock FontWeight="Bold" Text="{Binding EventHeading.Value}" />
            <TextBlock FontStyle="Italic" Text="{Binding EventSubHeading.Value}" />
            <TextBlock
                MinHeight="100"
                Text="{Binding EventDescription.Value}"
                TextWrapping="Wrap" />
        </StackPanel>

    </Grid>
</Page>
